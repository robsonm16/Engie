@model Domain.Dto.UsinaDto


<form asp-action="Create" method="post">
    <div class="card">
        <div class="card-header">
            <h3><i class="fas fa-plus"></i> Cadastro de usinas</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Fornecedor</label>
                    <select class="form-control" asp-for="Fornecedor" required>
                        <option value="SOLARIAN">SOLARIAN</option>
                        <option value="FUTURA">FUTURA</option>
                        <option value="CENTRAL GERADORA FAZENDA MODELO">CENTRAL GERADORA FAZENDA MODELO</option>
                        <option value="NOVA MUNDO">NOVA MUNDO</option>
                        <option value="SOLARE">SOLARE</option>
                        <option value="UNISOL">UNISOL</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>UC da Usina</label>
                    <input type="text" class="form-control" asp-for="UC" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Ativo</label>
                    <select class="form-control" asp-for="Ativo">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
    
                    </select>
                </div>
            </div>
            <div class="row my-3">
                <div class="col-12 ">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                </div>
            </div>
        </div>
        </div>
</form>

<script>
    document.getElementById("Ativo").addEventListener("click", () => {
        console.log(event);
        var val = this.checked;
        this.checked = !val;
    })
</script>
