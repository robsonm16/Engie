@model Domain.Commom.PaginateResult<Domain.Dto.UsinaDto>
@{

}

<div class="card">
    <div class="card-header">
        <h3><i class="fas fa-globe"></i> Usinas</h3>
    </div>
    <div class="card-body">

        <partial name="_FilterPartial.cshtml"  model="new Domain.Filters.UsinaFilter()"/>

        <div class="row my-3">
            <div class="col-12 text-right">
                <a class="btn btn-primary" asp-action="Create">Novo</a>
            </div>
        </div>
        <section class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Fornecedor</th>
                        <th>UC da Usina</th>
                        <th>Ativo</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Datalist)
                    {
                        <tr>
                            <td>@item.Fornecedor</td>
                            <td>@item.UC</td>
                            @if (item.Ativo)
                            {
                                <td><span class="badge badge-success">Sim</span></td>
                            }
                            else
                            {
                                <td><span class="badge badge-danger">Não</span></td>
                            }
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UsinaId" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.UsinaId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
